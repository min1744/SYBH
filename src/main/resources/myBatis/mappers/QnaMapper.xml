<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="QnaMapper">
  
  	<!-- <![CDATA[ 쿼리문   ]]> -->
	<!-- query piece -->
	<sql id="subRef">
	<![CDATA[
		select ref from qna where num=#{num}
	]]>	
	</sql>
	<sql id="subStep">
		select step from qna where num=#{num}
	</sql>
  	<sql id="subChoose">
  		<choose>
  			<when test="kind == 1">
  				where title
  			</when>
  			<when test="kind == 2">
  				where writer
  			</when>
  			<otherwise>
  				where contents
  			</otherwise>
  		</choose>
  	</sql>
  	
  	
  	<!-- 답글사전작업 -->
	<update id="setReplyUpdate" parameterType="BoardDTO">
		update qna set step=step+1 
		where ref=(<include refid="subRef"/>)
		and step>(<include refid="subStep"/>)
	</update>
	
	<!-- reply -->
	<insert id="setReply" parameterType="BoardDTO">
		insert into qna values
		(
			qna_seq.nextval, #{title}, #{writer}, #{contents}, sysdate, 0,
			(<include refid="subRef"/>),
			(<include refid="subStep"/>)+1,
			(select depth from qna where num=#{num})+1
		)
	</insert>
  	
  	<!-- 원본 글쓰기 -->
  	<insert id="setWrite" parameterType="QnaDTO">
  		<selectKey keyProperty="num" resultType="Integer" order="BEFORE">
  		select qna_seq.nextval from dual
  		</selectKey>
  		insert into qna values(#{num}, #{title}, #{writer}, #{contents}, sysdate, 0, #{num}, 0, 0)
  	</insert>
  	
  	<update id="setUpdate" parameterType="QnaDTO">
  		update qna set title=#{title}, contents=#{contents} where num=#{num}
  	</update>
  	
  	<delete id="setDelete" parameterType="Integer">
  		delete qna where num=#{num}
  	</delete>
  	
  	
  	<resultMap type="QnaDTO" id="qnaResult">
  		<!-- primary key --> <!-- property : DTO의 멤버변수명, column : DB의 컬럼명 -->
		<id property="num" column="num"/>
		<result property="title" column="title"/>
		<result property="writer" column="writer"/>
		<result property="contents" column="contents"/>
		<result property="reg_date" column="reg_date"/>
		<result property="hit" column="hit"/>
		<result property="ref" column="ref"/>
		<result property="step" column="step"/>
		<result property="depth" column="depth"/>
		<!-- fileDTO files가 하나일경우 : association-->
		<collection property="files" resultMap="fileResult" ofType="com.iu.file.FileDTO" javaType="java.util.ArrayList">
		</collection>
 	</resultMap>
 	
 	<resultMap type="com.iu.file.FileDTO" id="fileResult">
 			<id property="fnum" column="fnum"/>
 			<result property="num" column="num"/>
			<result property="fname" column="fname"/>
			<result property="oname" column="oname"/>
 	</resultMap>
  	
  	<select id="getSelect" parameterType="Integer" resultMap="qnaResult">
  		select * from qna Q full join files F using(num) where num=#{num}
  	</select>
  	
  	<update id="setHit" parameterType="Integer">
  		update qna set hit=hit+1 where num=#{num}
  	</update>
  	
  	<select id="getList" resultType="QnaDTO" parameterType="PageMaker">
  		select * from
  		(select rownum R, Q.* from
  		(select * from qna
  		<include refid="subChoose" />
  			like '%'||#{search}||'%' order by ref desc, step asc) Q)
  			where R between #{startRow} and #{lastRow}
  	</select>
  	
  	<select id="getCount" parameterType="PageMaker" resultType="Integer">
  		select count(num) from qna
  		<choose>
  			<when test="kind == 1">
  				where title
  			</when>
  			<when test="kind == 2">
  				where writer
  			</when>
  			<otherwise>
  				where contents
  			</otherwise>
  		</choose>
  			like '%'||#{search}||'%'
  	</select>
  </mapper>