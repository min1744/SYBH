<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="PayMapper">
  <!--결제 카테고리 0 : 건강검진 , 1 : 후원  -->
  <!--결제 입력  -->
  <insert id="setWrite" parameterType="PayVO">
  	insert into pay values(pay_seq.nextval, #{id}, sysdate, #{price}, #{opt}, #{category})
  </insert>
  
  <sql id="search">
  	<choose>
  		<when test="kind==1">ID</when>
  	</choose>
  </sql>
  
  <!--한사람 모든 결제내역 수  -->
  <select id="getOneTotalCount" parameterType="" resultType="Integer">
  	select count(num) from pay where id=#{id}
  </select>
  
  <!--한사람의 모든 결제내역  -->
  <select id="getOneList" parameterType="PageMaker" resultType="PayVO">
  	select * from
  	(select rownum R, P.* from
  	(select * from pay where id=#{id} and
  		<choose>
			<when test="kind==1">
				id
			</when>  	
  		</choose>
  		order by pay_date desc) P)
  		where R between #{startRow} and #{lastRow}
  </select>
  
  <!-- 후원 총금액  -->
  <select id="getSupportList" resultType="Integer">
  	select sum(price) from pay where category=1
  </select>
  
  <!-- 관리자페이지용 전체 건강검진 결제내역  -->
  <select id="getAllList" parameterType="PageMaker" resultType="PayVO">
  	select * from pay where category=0
  </select>
  
  </mapper>